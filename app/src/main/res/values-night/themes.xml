<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="colorSurfaceVariant">@color/secondaryLightColor</item>
        <item name="colorOnSurfaceVariant">@color/onSecondaryContainer</item>

        <item name="colorSurface">@color/secondaryDarkColor</item>
        <item name="colorOnSurface">@color/primaryLightColor</item>

        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/primaryLightColor</item>

        <item name="colorPrimaryContainer">@color/secondaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onSecondaryContainer</item>
        <!-- Status bar & Other views theme -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
        <item name="materialCardViewStyle">@style/CustomCardView</item>
        <!--General theme settings-->
        <item name="android:colorBackground">?attr/colorSecondary</item>
        <item name="android:textColorPrimary">@color/generalTextColor</item>
        <item name="android:textColorSecondary">@color/generalTextColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/subtittle_text_size</item>
        <item name="android:insetBottom">@dimen/button_insets</item>
        <item name="android:insetTop">@dimen/button_insets</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="CustomMaterialTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetBottom">@dimen/button_insets</item>
        <item name="android:insetTop">@dimen/button_insets</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="rippleColor">@color/primaryLightColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomMaterialIconButton" parent="Widget.Material3.Button.Icon">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_insets</item>
        <item name="android:insetTop">@dimen/button_insets</item>
        <item name="android:insetBottom">@dimen/button_insets</item>
        <item name="android:paddingLeft">@dimen/icon_button_padding</item>
        <item name="android:paddingRight">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="rippleColor">@color/primaryLightColor</item>
    </style>

    <style name="CustomMaterialToolbar" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/onSecondaryContainer</item>
        <item name="android:textColorSecondary">@color/onSecondaryContainer</item>
        <item name="actionMenuTextColor">@color/onSecondaryContainer</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/generalTintColor</item>
        <item name="endIconTint">@color/generalTintColor</item>
    </style>

    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="Theme.Hue.Splash" parent="Theme.Hue">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>