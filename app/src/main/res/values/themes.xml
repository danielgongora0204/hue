<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hue" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Surface Variant -->
        <item name="colorSurfaceVariant">@color/primaryDarkColor</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariantColor</item>
        <!-- Surface -->
        <item name="colorSurface">@color/secondaryLightColor</item>
        <item name="colorOnSurface">@color/secondaryContainer</item>
        <!-- Secondary Container -->
        <item name="colorSecondaryContainer">@color/secondaryLightColor</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>
        <!-- Primary Container -->
        <item name="colorPrimaryContainer">@color/secondaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onSecondaryContainer</item>

        <!-- Status bar & Other views theme -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
        <item name="materialCardViewStyle">@style/CustomCardView</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>
        <!--General theme settings-->
        <item name="android:colorBackground">?attr/colorSecondary</item>
        <item name="android:textColorPrimary">@color/generalTextColor</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomFab" parent="ThemeOverlay.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="tint">@color/whiteColor</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/generalTextColor</item>
        <item name="android:textSize">@dimen/paragraph_text_size</item>
        <item name="drawableTint">@color/generalTintColor</item>
    </style>

    <style name="CustomTextViewTitle" parent="CustomTextView">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="CustomTextViewSubTitle" parent="CustomTextView">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="CustomTextAppearanceBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/alternativeTextColor</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
        <item name="android:insetBottom">@dimen/button_insets</item>
        <item name="android:insetTop">@dimen/button_insets</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="CustomMaterialTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetBottom">@dimen/button_insets</item>
        <item name="android:insetTop">@dimen/button_insets</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="rippleColor">@color/primaryDarkColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomMaterialIconButton" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_insets</item>
        <item name="android:insetTop">@dimen/button_insets</item>
        <item name="android:insetBottom">@dimen/button_insets</item>
        <item name="android:paddingLeft">@dimen/icon_button_padding</item>
        <item name="android:paddingRight">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
        <item name="rippleColor">@color/primaryDarkColor</item>
    </style>

    <style name="CustomMaterialToolbar" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/onSecondaryContainer</item>
        <item name="android:textColorSecondary">@color/onSecondaryContainer</item>
        <item name="actionMenuTextColor">@color/onSecondaryContainer</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="startIconTint">@color/generalTintColor</item>
        <item name="endIconTint">@color/generalTintColor</item>
        <item name="android:textColorHint">@color/primaryDarkColor</item>
        <item name="hintTextColor">@color/primaryDarkColor</item>
    </style>

    <style name="CustomTextInput" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardBackgroundColor">@color/secondaryLightColor</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="layout_behavior">com.google.android.material.behavior.HideBottomViewOnScrollBehavior</item>
        <item name="backgroundTint">@color/primaryDarkColor</item>

    </style>

    <style name="CustomContentLoadingProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:visibility">visible</item>
        <item name="colorAccent">@color/secondaryLightColor</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RectangularRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Theme.Hue.Splash" parent="Theme.Hue">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>